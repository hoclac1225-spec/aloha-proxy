// prisma/schema.prisma

// Kết nối database
datasource db {
  provider = "postgresql" // có thể đổi sang "sqlite" nếu dev tạm
  url      = env("DATABASE_URL")
}

// Generator Prisma Client
generator client {
  provider = "prisma-client-js"
}

// Model người dùng
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

// Model sản phẩm
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orders      OrderItem[]
}

// Model đơn hàng
model Order {
  id        Int        @id @default(autoincrement())
  user      User       @relation(fields: [userId], references: [id])
  userId    Int
  total     Float
  status    String     @default("pending")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  items     OrderItem[]
}

// Model chi tiết đơn hàng
model OrderItem {
  id        Int      @id @default(autoincrement())
  order     Order    @relation(fields: [orderId], references: [id])
  orderId   Int
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int      @default(1)
  price     Float
}
